# Get to the root of a git directory

function reporoot { 
while [ ! -d .git -a ! -f 'README.md' -a `pwd` != "/" ]
do
    cd ".."; 
done
}
#----------------------------------------------------------


# GPG
#------------------
GPG_TTY=$(tty)
export GPG_TTY
# above are already in .zshrc

# Restart the GPG-agent

alias gpg-restart='echo "GPG Agent Restarted" && gpg-connect-agent reloadagent /bye'
alias gpg-start='echo "Signing GPG Key" | gpg --clearsign'

#echo "Signing GPG Key" | gpg --clearsign

# $PATH
#------------------

export PATH=~/dotfiles/bin:$PATH


