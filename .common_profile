# Join Message
echo -e "\e[1;31m$server_name\e[0m"

# Set Windows Terminal Tab Name
echo -ne "\033]0;$server_name\a"

# Aliases
#-----------------------
alias path='sed "s/:/\n/g" <<< "$PATH"'

alias editshell='nano ~/.common_profile'

alias ls="exa --icons --group-directories-first"
alias ll="exa --icons --group-directories-first -lah"

alias youtube-dl='yt-dlp'


alias g="goto"
alias grep='grep --color'

# Directories
alias cd-programming='cd /mnt/c/Programming/'

#Bone-Fat-Insulin
alias cd-bfi='cd /mnt/c/Programming/Rush/bone-fat-insulin-project'
alias bfi-bash='docker exec -it -u root BFI-datalad-superdataset bash'

# Docker
alias dockerup='docker-compose up -d --remove-orphans && docker-compose ps && dtop'
alias dtop='docker ps -q | xargs  docker stats --no-stream | (read -r; printf "%s\n" "$REPLY"; sort -k 2 )'
alias logd='docker logs -tf --tail="200"'

function entercontainer() {
	docker exec -it $1 zsh
}

# Rar
alias unrar-find='unrar e -r -o- *.rar ./'


# Git
#------------------
## Start SSH agent
eval $(ssh-agent -s)

alias pre-commit='python3 ~/git/pre-commit/pre-commit-2.20.0.pyz'

alias readme='reporoot && pwd && nano --view README.md'

alias gitgraph='git log --oneline --graph --decorate --all'
alias gitlog='git log --decorate --all --show-pulls --show-signature --max-count 3'
alias gitdiff='git diff --compact-summary'
alias gitmerge='git merge --squash --stat'


function gitpush() {
	git push $1 $2
	git log --decorate --all --show-pulls --show-signature --max-count 1
}


if [ -f .pre-commit-config.yaml ]; then
    echo 'pre-commit configuration detected, but `pre-commit install` was never run' 1>&2
fi


# Datalad
#------------------

alias datalad-here='docker run --name datalad --rm -p 8888:8888 \
	-v "${PWD}":/home/jovyan/lab -v ~/bfi-datalad/git-annex:/home/jovyan/git-annex \
	-v ~/.gnupg/S.gpg-agent-extra:/gpg-agent --env GPG_AGENT_INFO=/gpg-agent:0:1 \
	datascience:nightly'


#----------------------------------------------------------
